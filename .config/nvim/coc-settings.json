{
	"clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd",
	"diagnostic.checkCurrentLine": true,
	"coc.preferences.formatOnSaveFiletypes": [
		"css",
		"markdown",
		"javascript",
		"graphql",
		"html",
		"yaml",
		"json",
		"python"
	],
	// python config
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	"snippets.ultisnips.directories": [
		"UltiSnips",
		"~/.config/nvim/utils/snips"
	],
	"diagnostic.warningSign": "!!",
	"diagnostic.errorSign": "!!",
	"diagnostic.infoSign": ">>",
	"explorer.position": "left",
	"explorer.floating.position": "center",
	"explorer.previewAction.onHover": "content",
	"explorer.file.showHiddenFiles": true,
	"explorer.quitOnOpen": true,
	"pairs.enableBackspace": true,
	"pairs.disableLanguages": [
		"json"
	]
}
