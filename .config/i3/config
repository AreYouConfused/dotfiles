bindsym XF86AudioMute exec --no-startup-id pamixer -t && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3blocks
set $refresh_i3blocks_media sleep 0.2 && pkill -RTMIN+2 i3blocks
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause && $refresh_i3blocks_media
bindsym XF86AudioNext exec --no-startup-id playerctl next && $refresh_i3blocks_media
bindsym XF86AudioPrev exec --no-startup-id playerctl previous && $refresh_i3blocks_media

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%-

