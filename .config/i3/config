bar {
        id bar-1
        output primary
        status_command i3blocks
        tray_output primary
        position top
}

bar {
        id bar-2
        output nonprimary
        status_command i3blocks
        tray_output none
        position bottom
}


gaps inner 8
gaps outer 8
smart_gaps inverse_outer

